{
    "name": "appserver-io-apps/api-guard",
    "description": "Micro web service with auto-validation of input and automatic",
    "version": "0.1.0",
    "require": {
        "appserver-io/routlt": "0.3.*"
    },
    "require-dev": {
        "appserver-io/build": "0.2.*",
        "appserver-io-psr/epb": "0.4.*",
        "appserver-io-psr/servlet": "0.8.*",
        "appserver-io-psr/naming": "0.2.*",
        "appserver-io-psr/mop": "0.1.*",
        "appserver-io/phar" : "0.1.*"
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-0": {
            "AppserverIo\\Apps\\ApiGuard\\": [
                "common/classes/",
                "src/WEB-INF/classes/",
                "src/META-INF/classes/"
            ]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "AppserverIo\\Apps\\ApiGuard\\": [
            "tests/WEB-INF/classes/",
            "tests/META-INF/classes/"
            ]
        }
    },
    "authors": [
        {
            "name": "Bernhard Wick",
            "email": "bw@appserver.io"
        }
    ]
}