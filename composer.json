{
    "name": "appserver-io-apps/api-guard",
    "description": "Micro web service with auto-validation of input and automatic",
    "version": "1.0.0",
    "require": {
        "appserver-io/routlt": "~1.0"
    },
    "require-dev": {
        "appserver-io/build": "~1.0",
        "appserver-io-psr/epb": "~1.0",
        "appserver-io-psr/servlet": "~1.0",
        "appserver-io-psr/naming": "~1.0",
        "appserver-io-psr/mop": "~1.0",
        "appserver-io/phar" : "~1.0"
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-0": {
            "AppserverIo\\Apps\\ApiGuard\\": [
                "common/classes/",
                "src/WEB-INF/classes/",
                "src/META-INF/classes/"
            ]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "AppserverIo\\Apps\\ApiGuard\\": [
            "tests/WEB-INF/classes/",
            "tests/META-INF/classes/"
            ]
        }
    },
    "authors": [
        {
            "name": "Bernhard Wick",
            "email": "bw@appserver.io"
        }
    ]
}
